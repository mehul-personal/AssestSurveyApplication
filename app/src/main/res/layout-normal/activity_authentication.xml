<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.analytic.assestsurveyapplication.AuthenticationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="@string/str_enter_your_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="@string/str_enter_your_phone"
            android:inputType="phone" />

        <Spinner
            android:id="@+id/spnCompany"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:entries="@array/company_name" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="right" android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="@string/str_submit"
            android:textColor="#ffffff" android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
